  "devDependencies": {
    "@carforyou/eslint-config": "4.0.54",
    "@types/node": "18.16.17",
    "rimraf": "5.0.1",
    "semantic-release": "19.0.5",
    "typescript": "5.1.3"
  },
  "dependencies": {
    "glob": "10.2.7",
    "js-yaml": "3.14.1",
    "just-diff": "6.0.2",
    "sort-phraseapp-locales": "0.0.1"
